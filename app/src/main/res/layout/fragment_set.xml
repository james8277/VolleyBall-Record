<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F4F6">

    <Gallery
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFE1A873"/>

    <Gallery
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:background="@drawable/vollyballcourt_2"
        android:id="@+id/set_court" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/set_player_3_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/set_player_3"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:background="@drawable/player_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:id="@+id/set_player_number_3"
            android:layout_below="@id/set_player_3"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/set_player_2_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="70dp">

        <Button
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:id="@+id/set_player_2"
            android:background="@drawable/player_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:id="@+id/set_player_number_2"
            android:layout_below="@id/set_player_2"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/set_player_4_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="70dp">

        <Button
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:id="@+id/set_player_4"
            android:background="@drawable/player_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:id="@+id/set_player_number_4"
            android:layout_below="@id/set_player_4"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/set_player_1_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_below="@id/set_player_2_layout"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp">

        <Button
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:id="@+id/set_player_1"
            android:background="@drawable/player_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:id="@+id/set_player_number_1"
            android:layout_below="@id/set_player_1"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/set_player_5_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_below="@id/set_player_4_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp">

        <Button
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:id="@+id/set_player_5"
            android:background="@drawable/player_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:id="@+id/set_player_number_5"
            android:layout_below="@id/set_player_5"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/set_player_6_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/set_player_3_layout"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:id="@+id/set_player_6"
            android:background="@drawable/player_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:id="@+id/set_player_number_6"
            android:layout_below="@id/set_player_6"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/set_set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/set_court"
        android:layout_marginTop="20dp"
        android:text="@string/start_set_button"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/set_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/set_set_text"
        android:layout_marginTop="20dp"
        android:text="@string/success_button"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/set_mistake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/set_success"
        android:layout_marginLeft="75dp"
        android:layout_below="@id/set_set_text"
        android:layout_marginTop="20dp"
        android:text="@string/mistake_button"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/set_invalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_mistake"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:text="@string/invalid_button"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/set_red_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/red_team"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/set_blue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/blue_team"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/set_blue_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp"
        android:layout_below="@+id/set_blue_name"
        android:text="@string/initial_score"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/set_red_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"
        android:layout_below="@+id/set_red_name"
        android:text="@string/initial_score"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/back"
        android:textSize="25sp"
        android:background="#FFF5F4F6"
        android:id="@+id/set_back"
        android:textColor="@color/text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/BlueSetScore_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="35sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/RedSetScore_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="35sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />


</RelativeLayout>
